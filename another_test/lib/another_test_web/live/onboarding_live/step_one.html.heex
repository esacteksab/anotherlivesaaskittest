<div id={@id}>
  <div class="text-center">
    <button type="btn" phx-target={@myself} phx-click="complete" class="btn btn-secondary">
      Complete step
    </button>
  </div>

  <div class="flex justify-end mt-8 mb-2">
    <button type="btn" phx-click="continue" class="btn btn-primary" disabled={!@step_completed}>
      Continue
    </button>
  </div>
</div>
